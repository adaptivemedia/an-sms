{
    "name": "andreasnij/an-sms",
    "type": "library",
    "description": "A PHP library to send and receive SMS text messages through various gateways/providers.",
    "keywords": [
        "sms",
        "psms",
        "premium sms",
        "cellsynt",
        "twilio",
        "nexmo",
        "vonage",
        "46elks"
    ],
    "homepage": "http://github.com/andreasnij/an-sms",
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Nilsson"
        }
    ],
    "autoload": {
        "psr-4": {
            "AnSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AnSms\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-client": "^1.0",
        "php-http/discovery": "^1.14"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "vonage/client-core": "^2.10",
        "twilio/sdk": "^6.32",
        "guzzlehttp/guzzle": "^7.4",
        "phpstan/phpstan": "^1.3"
    },
    "suggest": {
        "twilio/sdk": "Required to use the Twilio gateway",
        "vonage/client-core": "Required to use the Vonage gateway"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs",
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse",
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
