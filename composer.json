{
  "name": "jandreasn/an-sms",
  "type": "library",
  "description": "A PHP library to send and receive SMS text messages through various providers/gateways.",
  "keywords": ["sms", "mobile", "payment", "texts", "premium", "psms"],
  "homepage": "http://github.com/jandreasn/an-sms",
  "license": "MIT",
  "authors": [
    {
      "name": "Andreas Nilsson"
    }
  ],
  "require": {
    "php": ">=7.1",
    "psr/log": "^1.0",
    "php-http/httplug": "^1.0",
    "php-http/message-factory": "^1.0",
    "php-http/discovery": "^1.0",
    "php-http/client-implementation": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "squizlabs/php_codesniffer": "^3.0",
    "php-http/guzzle6-adapter": "^1.0",
    "php-http/message": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "AnSms\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AnSms\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@phpcs",
      "@phpunit"
    ],
    "phpcs": "vendor/bin/phpcs",
    "phpunit": "vendor/bin/phpunit"
  }
}
